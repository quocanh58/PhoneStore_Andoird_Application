<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background5"
    android:orientation="vertical"
    android:paddingVertical="10dp"
    tools:context=".Activity.AdminDashboardActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Quản lý hệ thống"
        android:textColor="@color/purple_500"
        android:textStyle="bold"
        android:textSize="30dp">

    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnQuanLyTaiKhoan"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#5DA331"
            android:text="Quản lý tài khoản"
            android:textColor="@color/white"></Button>

        <Button
            android:id="@+id/btnQuanLySP"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#5DA331"
            android:text="Quản lý sản phẩm"
            android:textColor="@color/white"></Button>

        <Button
            android:id="@+id/btnQuanLyLoaiSP"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#5DA331"
            android:text="Quản lý loại sản phẩm"
            android:textColor="@color/white"></Button>

        <Button
            android:id="@+id/btnQuanLyDonHang"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#5DA331"
            android:text="Quản lý đơn hàng"
            android:textColor="@color/white"></Button>


    </LinearLayout>


</LinearLayout>