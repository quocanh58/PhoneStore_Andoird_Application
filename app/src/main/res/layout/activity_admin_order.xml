<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".Activity.AdminOrderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAdminOrderFullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Tên khách hàng"
                android:textStyle="bold"
                android:textColor="#3F51B5"
                android:textSize="14dp">

            </TextView>

            <TextView
                android:id="@+id/tvAdminOrderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Ngày đặt"
                android:textSize="14dp">

            </TextView>

            <TextView
                android:id="@+id/tvAdminOrderTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Tổng hóa đơn"
                android:textSize="14dp">

            </TextView>

            <TextView
                android:id="@+id/tvAdminOrderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:textColor="#5DA331"
                android:text="Trạng thái đơn hàng"
                android:textSize="14dp">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.35"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <Button
                android:id="@+id/btnAdminOrderChangStatus"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:backgroundTint="#5DA331"
                android:text="Duyệt"
                android:textColor="@color/white"></Button>
            <Button
                android:id="@+id/btnAdminOrderCancel"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:backgroundTint="#9AF44336"
                android:text="Hủy"
                android:textColor="@color/white"></Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>