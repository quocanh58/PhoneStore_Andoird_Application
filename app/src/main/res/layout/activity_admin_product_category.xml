<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".Activity.AdminProductCategoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.7"
            android:src="@drawable/loadfail"></ImageView>

        <TextView
            android:id="@+id/tvAdminProducCategoryName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:text="Tên sản phẩm"
            android:textSize="14dp">

        </TextView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnAdminUpdateProductCategory"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:backgroundTint="#5DA331"
                android:text="Sửa"
                android:textColor="@color/white"></Button>

            <Button
                android:id="@+id/btnAdminDeleteProductCategory"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:backgroundTint="#7EF44336"
                android:text="Xóa"
                android:textColor="@color/white"></Button>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>