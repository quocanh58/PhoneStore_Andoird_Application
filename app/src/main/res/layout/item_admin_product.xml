<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_admin_product_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.25"
            android:src="@drawable/loadfail"></ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/item_admin_product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Tên sản phẩm"
                android:textSize="14dp">

            </TextView>

            <TextView
                android:id="@+id/item_admin_product_categoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Loại sản phẩm"
                android:textSize="14dp">

            </TextView>

            <TextView
                android:id="@+id/item_admin_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Giá"
                android:textSize="14dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical">



            <Button
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:id="@+id/item_admin_product_btnSua"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:backgroundTint="#5DA331"
                android:text="Sửa"
                android:textColor="@color/white"></Button>

            <Button
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:id="@+id/item_admin_product_btnXoa"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:backgroundTint="#7EF44336"
                android:text="Xóa"
                android:textColor="@color/white"></Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>