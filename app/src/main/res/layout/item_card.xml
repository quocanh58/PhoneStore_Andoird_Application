<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_background"
    >
   <LinearLayout
       android:padding="10dp"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <CheckBox
           android:focusable="false"
           android:focusableInTouchMode="false"
           android:id="@+id/checkCart"
            android:layout_gravity="center"
           android:layout_width="50dp"
           android:layout_height="75dp">
       </CheckBox>
       <ImageView
           android:id="@+id/imgCart"
           android:layout_gravity="center"
            android:padding="10dp"
           android:src="@drawable/loadfail"
           android:layout_width="75dp"
           android:layout_height="75dp">
       </ImageView>
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/txtTileCart"
               android:maxLines="1"
               android:ellipsize="end"
               android:textSize="17dp"
               android:textStyle="normal"
               android:textColor="@color/black"
               android:text="Title"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

           </TextView>
           <TextView
               android:id="@+id/txtGiaCart"
               android:padding="5dp"
               android:maxLines="1"
               android:ellipsize="end"
               android:textSize="17dp"
               android:textStyle="normal"
               android:textColor="@android:color/holo_red_dark"
               android:text="Ä‘ 23.000"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

           </TextView>
           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <Button
                   android:id="@+id/btnPlusItem"
                   android:focusable="false"
                   android:focusableInTouchMode="false"
                   android:layout_margin="0dp"
                   android:padding="0dp"
                   android:textColor="@color/black"
                   android:text="+"
                   android:backgroundTint="@color/white"
                   android:layout_width="40dp"
                   android:layout_height="wrap_content">

               </Button>
               <TextView
                   android:id="@+id/txtSlCart"
                   android:textAlignment="center"
                   android:padding="5dp"
                   android:maxLines="1"
                   android:ellipsize="end"
                   android:textSize="17dp"
                   android:textStyle="normal"
                   android:textColor="@android:color/holo_red_dark"
                   android:text="99"
                   android:layout_width="75dp"
                   android:layout_height="wrap_content">

               </TextView>
               <Button
                   android:id="@+id/btnSubItem"
                   android:focusable="false"
                   android:focusableInTouchMode="false"
                   android:layout_margin="0dp"
                   android:padding="0dp"
                   android:textColor="@color/black"
                   android:text="-"
                   android:backgroundTint="@color/white"
                   android:layout_width="40dp"
                   android:layout_height="wrap_content">

               </Button>

               <Button

                   android:id="@+id/btnRemoveItemCart"
                   android:focusable="false"
                   android:focusableInTouchMode="false"
                   android:layout_margin="2dp"
                   android:padding="6dp"
                   android:textColor="@color/black"
                   android:textAlignment="center"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:backgroundTint="@color/white"
                   android:layout_width="40dp"
                   android:layout_height="match_parent"
                   android:drawableLeft="@drawable/delete_cart_icon"
                   android:drawablePadding="4dp"
               >
           </Button>

       </LinearLayout>
       </LinearLayout>
   </LinearLayout>
</LinearLayout>